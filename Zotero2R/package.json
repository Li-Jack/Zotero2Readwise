{
  "name": "zotero2readwise-plugin",
  "version": "1.2.0",
  "description": "Export your Zotero annotations and notes to Readwise - Zotero 7 Plugin",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run build:copy && npm run build:xpi",
    "build:ts": "esbuild src/index.ts --bundle --outdir=build --format=iife --platform=browser --target=firefox102 --external:zotero* --external:chrome* --external:Components*",
    "build:copy": "mkdir -p build && cp -r addon/* build/ && cp package.json build/",
    "build:xpi": "cd build && zip -r ../zotero2readwise.xpi * -x '*.DS_Store' '*/.*' 'package-lock.json'",
    "clean": "rm -rf build dist",
    "dev": "npm run build:ts -- --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "zotero",
    "readwise",
    "plugin",
    "extension",
    "annotations",
    "highlights"
  ],
  "author": "Essi Alizadeh",
  "license": "MIT",
  "homepage": "https://github.com/e-alizadeh/Zotero2Readwise",
  "repository": {
    "type": "git",
    "url": "https://github.com/e-alizadeh/Zotero2Readwise.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "zotero-types": "^4.0.0"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.0.1",
    "fs-extra": "^11.2.0",
    "archiver": "^6.0.1"
  }
}
