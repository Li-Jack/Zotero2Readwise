{
  "name": "zotero-z2r-readwise",
  "type": "module",
  "version": "0.1.0",
  "description": "Sync highlights and notes between Zotero and Readwise",
  "config": {
    "addonName": "Z2R (Zotero to Readwise)",
    "addonID": "io.z2r.readwise",
    "addonRef": "z2r",
    "addonInstance": "Z2R",
    "prefsPrefix": "extensions.zotero.z2r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/zotero-z2r-readwise.git"
  },
  "author": "Your Name",
  "bugs": {
    "url": "https://github.com/yourusername/zotero-z2r-readwise/issues"
  },
  "homepage": "https://github.com/yourusername/zotero-z2r-readwise#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dev": "NODE_ENV=development zotero-plugin serve",
    "build": "NODE_ENV=production zotero-plugin build && tsc --noEmit",
    "build:dev": "NODE_ENV=development BUILD_TARGET=development SOURCE_MAP=true zotero-plugin build",
    "build:prod": "NODE_ENV=production BUILD_TARGET=production zotero-plugin build",
    "zotero:dev": "npm run build:dev && npm run zotero:pack",
    "zotero:build": "npm run build:prod && npm run zotero:pack",
    "zotero:pack": "node scripts/pack.js",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:readwise": "npx tsx src/api/readwiseClient/test.ts",
    "test:manual": "echo 'Please see docs/testing/manual-test-scenarios.md for manual testing guide'",
    "test:acceptance": "node scripts/run-acceptance-tests.js",
    "test:mvp": "jest test/mvp-acceptance.test.ts",
    "test:report": "npm run test:acceptance && open test/acceptance-report.md",
    "typecheck": "tsc --noEmit",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "format": "prettier --write .",
    "release": "NODE_ENV=production zotero-plugin release",
    "update-deps": "npm update --save",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run test:unit",
    "clean": "rm -rf .scaffold build dist *.xpi coverage"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.13.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.2.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "archiver": "^7.0.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.1.0-beta.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,xhtml,css}": [
      "prettier --write"
    ]
  }
}
